{
  "name": "Segment Event Tracker",
  "manifest_version": 2,
  "version": "2.2",
  "description": "See when Segment and Dreamdata events are being tracked.",
  "permissions": [
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "devtools_page": "popup.html",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo.png"
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ],
    "persistent": true
  }
}